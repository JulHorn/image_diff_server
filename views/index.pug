extends layout
block content
    div(id='markedAreasRegion')
    h1 Image Comparison Server
    div(id='header' class='header')
        table
            tr
                td
                    div
                        span Current job:
                        span(id='currentJob')
                td
                    div
                        span Progress:
                        progress(id='progressIndicator' value=0 max=10)
                        button(id='refreshButton' data-action='refresh')
                            i(class="fas fa-sync-alt")
            tr
                td
                    div
                        span Last job finished:
                        span(id='timeStamp')
                td
                    div
                        span Pixel difference:
                        span(id='maxPixelPercentage')

            tr
                td(colspan = 2)
                    div
                        button(class='refreshAll' data-action='refreshAll') Check all images

        div(class='hidden')
            span Server Address:
            input(type='text', id='serverAddress')
            button(data-action='saveServerAddress') Save
    div(id='content')
    div(id='licenceBlock')
        span Licence information:
        ul
            li The ajax loading icon was created via http://loading.io/.
            li All other icons are part of Font Awesome (https://fontawesome.com/)